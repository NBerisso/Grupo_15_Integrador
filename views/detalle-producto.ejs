<!DOCTYPE html>
<html>

<%- include ("./partials/head.ejs", {title:"detalle-producto", style:"detalle-producto"}) %>

<body>
    <header>
        <%- include ("./partials/navbar.ejs")%>
    </header>
    <main>
        <div class="seccion">
            <div class="seccion1">
                <h1><%= cafe.name %></h1>
                <img src="/img/imagenes-cafes/<%= cafe.image ? cafe.image : 'porDefecto.jpg' %>" alt="cafe" />
            </div>
            <div class="seccion2">
                <span class="descripcion">
                    <h2><%= cafe.name %></h2>
                </span>
                <span class="precio">
                    <h3><%= cafe.price %></h3>
                </span>
                <span class="MedioDePago">
                    <h3>Medios de Pago</h3>
                    <i class="fab fa-cc-visa"></i>
                    <i class="fab fa-cc-mastercard"></i>
                    <i class="fab fa-cc-amex"></i>
                </span>
                <select name="peso" id="peso">
                    <option disabled selected>Selecciona un Peso</option>
                    <option value="250gr">250gr</option>
                    <option value="500gr">500gr</option>
                    <option value="1kg">1 Kilo</option>
                </select>
                <select name="molienda" id="molienda">
                    <option disabled selected>Selecciona una Molienda</option>
                    <% cafe.moliendas.forEach(function(tipoMolienda) {%>                                    
                        <option value=<%= tipoMolienda %>><%= tipoMolienda%></option>
                    <% }); %>
                    </select>     

                        <label>Cantidad</label>
                        <input class="numero" type="number" placeholder="0">
                        <input class="boton" type="button" value="agregar al carrito">
                        <h2>Descripcion del Producto</h2>
                <p><%= cafe.description %></p>
            </div>
        </div>
    </main>
    <%- include ("./partials/footer.ejs") %>
</body>

</html>